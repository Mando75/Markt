    "@types/express-session": "^1.15.11",
    "@types/faker": "^4.1.4",
    "@types/graphql": "^14.0.3",
    "@types/graphql-fields": "^1.3.0",
    "@types/ioredis": "^4.0.3",
    "@types/jest": "^23.3.7",
