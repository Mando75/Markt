{
  "name": "graphql-server-boilerplate",
  "version": "1.0.0",
  "scripts": {
    "build": "rm -rf dist && yarn run tsc -p ./",
    "start": "node dist/index.js",
    "run": "NODE_ENV=development nodemon --watch ./dist ./dist/index.js",
    "test": "NODE_ENV=test yarn run test-migration && jest --coverage --forceExit",
    "test-with-coverage": "yarn test && cat ./coverage/lcov.info | codacy-coverage",
    "gen-types": "yarn run ts-node --project ./tsconfig.json --files ./scripts/genSchema.ts",
    "gen-migration": "yarn run ts-node node_modules/.bin/typeorm migration:generate -c development -n ",
    "test-migration": "yarn build && yarn run ts-node node_modules/.bin/typeorm migration:run -c test"
  },
  "description": "Boilerplate for setting up a GraphQL Server with Typescript, TypeORM, Postgresql and Jest",
  "main": "index.js",
  "repository": "git@gitlab.com:Mando75/graphql-server-boilerplate.git",
  "author": "Bryan MÃ¼ller <bmuller0975@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@sendgrid/mail": "^6.3.1",
    "apollo-server-express": "2.0.7",
    "bcrypt": "^3.0.2",
    "connect-redis": "^3.4.0",
    "dotenv": "^6.1.0",
    "express": "^4.16.4",
    "express-rate-limit": "^3.3.2",
    "express-session": "^1.15.6",
    "graphql": "^14.0.2",
    "graphql-middleware": "^2.0.2",
    "graphql-shield": "^4.1.1",
    "graphql-tools": "^4.0.2",
    "ioredis": "^4.2.0",
    "lodash.merge": "^4.6.1",
    "passport": "^0.4.0",
    "passport-google-oauth2": "^0.1.6",
    "pg": "^7.5.0",
    "rate-limit-redis": "^1.6.0",
    "reflect-metadata": "^0.1.10",
    "typeorm": "^0.2.8",
    "uuid": "^3.3.2",
    "yup": "^0.26.6"
  },
  "devDependencies": {
    "@gql2ts/from-schema": "^1.10.1",
    "@types/bcrypt": "^3.0.0",
    "@types/connect-redis": "^0.0.8",
    "@types/express-rate-limit": "^2.9.4",
    "@types/express-session": "^1.15.11",
    "@types/faker": "^4.1.4",
    "@types/graphql": "^14.0.3",
    "@types/ioredis": "^4.0.3",
    "@types/jest": "^23.3.7",
    "@types/lodash.merge": "^4.6.4",
    "@types/node": "^10.12.2",
    "@types/passport": "^1.0.0",
    "@types/passport-google-oauth2": "^0.1.2",
    "@types/pg": "^7.4.11",
    "@types/request-promise": "^4.1.42",
    "@types/sendgrid": "^4.3.0",
    "@types/uuid": "^3.4.4",
    "@types/yup": "^0.26.1",
    "apollo": "^2.1.8",
    "babel-jest": "^23.6.0",
    "codacy-coverage": "^3.2.0",
    "es6-shim": "^0.35.3",
    "faker": "^4.1.0",
    "gql2ts": "^1.10.1",
    "jest": "^23.6.0",
    "jest-environment-node": "^23.4.0",
    "nock": "^10.0.5",
    "nodemon": "^1.18.4",
    "prettier": "1.15.3",
    "pretty-quick": "^1.8.0",
    "request-promise": "^4.2.2",
