    "bcryptjs": "^2.4.3",
    "connect-redis": "^3.4.0",
    "dotenv": "^6.1.0",
    "express": "^4.16.4",
    "express-rate-limit": "^3.3.2",
    "express-session": "^1.15.6",
    "graphql": "^14.0.2",
    "graphql-fields": "^2.0.1",
    "graphql-middleware": "^2.0.2",
    "graphql-shield": "^4.1.1",
    "graphql-tools": "^4.0.2",
    "ioredis": "^4.2.0",
    "lodash.merge": "^4.6.1",
    "passport": "^0.4.0",
    "passport-google-oauth2": "^0.1.6",
    "pg": "^7.5.0",
    "randomstring": "^1.1.5",
    "rate-limit-redis": "^1.6.0",
    "reflect-metadata": "^0.1.10",
    "typeorm": "^0.2.8",
    "typeorm-naming-strategies": "^1.0.2",
