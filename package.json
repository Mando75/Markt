{
  "name": "markt",
  "version": "1.0.0",
  "engines": {
    "node": "11.10.0"
  },
  "scripts": {
    "build": "rm -rf dist && yarn run tsc -p ./",
    "start": "node dist/index.js",
    "start:dev": "nodemon --watch 'src/**/*.ts' --ignore 'src/**/*.spec.ts' --exec 'yarn run tsnode' src/index.ts",
    "test": "jest --config=jest.config.js --forceExit",
    "test:coverage": "yarn test && cat ./coverage/lcov.info | codacy-coverage",
    "gen:graphql-types": "yarn run tsnode ./scripts/genSchema.ts",
    "migrate:gen": "yarn run tsnode:typeorm migration:generate -c development -n ",
    "migrate:create": "yarn run tsnode:typeorm migration:create -c development -n",
    "migrate:run": "yarn run tsnode:typeorm migration:run -c development",
    "migrate:test": "yarn run tsnode:typeorm migration:run -c test",
    "migrate:revert": "yarn run tsnode:typeorm migration:revert -c development",
    "tsnode": "yarn run ts-node --project ./tsconfig.json --files",
    "tsnode:typeorm": "yarn run ts-node --project ./tsconfig.json --files node_modules/.bin/typeorm",
    "setup-dev": "yarn install && yarn build && yarn gen:graphql-types && yarn start:dev",
    "heroku-postbuild": "yarn build"
  },
  "description": "Project Markt server",
  "main": "dist/index.js",
  "repository": "git@gitlab.com:Mando75/Markt.git",
  "author": "Bryan MÃ¼ller <bmuller0975@gmail.com>",
  "license": "AGPL-3.0-or-later",
